# Database Configuration
# Connection string for Prisma to connect to PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ecommerce_db?schema=public"

# Application Configuration
# Port for the NestJS application server
PORT=3000
NODE_ENV=development

# JWT Configuration
# Secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
# Time in seconds for JWT access token expiration (default: 3600 = 1 hour)
JWT_EXPIRES_IN=3600
# Time in seconds for refresh token expiration (default: 604800 = 7 days)
JWT_REFRESH_EXPIRES_IN=604800

# HMAC Configuration
# Secret key for hashing refresh tokens (should be different from JWT_SECRET)
# Used to create HMAC-SHA256 hashes of refresh tokens before storing in database
HMAC_SECRET="your-hmac-secret-key-change-this-in-production"

# Redis Configuration
# Redis connection URL for caching and BullMQ queues
REDIS_URL="redis://localhost:6379"
# Redis host (alternative to REDIS_URL)
REDIS_HOST=localhost
# Redis port (alternative to REDIS_URL)
REDIS_PORT=6379
# Redis password (if required)
REDIS_PASSWORD=

# Cache Configuration
# Enable/disable LRU in-memory cache (true) or use Redis only (false)
USE_IN_MEMORY_CACHE=true
# Maximum number of items in LRU cache
LRU_CACHE_MAX_SIZE=100
# Time-to-live for cached items in seconds
CACHE_TTL=3600

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Enable pretty printing for logs (true for development, false for production)
LOG_PRETTY=true

# Prometheus Configuration
# Enable Prometheus metrics collection
PROMETHEUS_ENABLED=true
# Path for Prometheus metrics endpoint (default: /metrics)
PROMETHEUS_PATH=/metrics

# BullMQ Configuration
# Redis connection string for BullMQ (can reuse REDIS_URL)
BULLMQ_REDIS_URL="redis://localhost:6379"

# Mailer Configuration
# Email provider driver: ethereal (dev) | smtp (production)
MAILER_DRIVER=ethereal

# SMTP Configuration (for MAILER_DRIVER=smtp)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Email Settings
FROM_EMAIL="no-reply@yourdomain.com"
FROM_NAME="E-commerce Backend"

# Application URL (for email links)
APP_URL="http://localhost:3000"

